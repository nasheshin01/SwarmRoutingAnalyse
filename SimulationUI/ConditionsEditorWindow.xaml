<Window x:Class="SimulationUI.ConditionsEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SimulationUI"
        mc:Ignorable="d"
        Title="ConditionEditorWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Rule list -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <ListBox x:Name="ConditionsList">
            </ListBox>
            <StackPanel Margin="10">
                <Button Content="Add Rule" Click="OnAddConditionButtonClicked"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
